<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.packt.cookbook.domain">

    <class name="User" table="user">
    
        <id name="id_u" type="java.lang.Integer">
            <column name="id_u" />
            <generator class="identity" />
        </id>
        
        <property name="name" type="string">
            <column name="name" length="255" not-null="true" />
        </property>
        
        <property name="password" type="string">
            <column name="password" length="255" not-null="true" />
        </property>
        
        <property name="email" type="string">
            <column name="email" length="255" not-null="true" />
        </property>
        
        <property name="token" type="string">
            <column name="token" length="255" not-null="true" />
        </property>
     
     	<!-- set name="listOfRole" table="user_role" inverse="false" lazy="false" fetch="select" cascade="all" >
            <key>
                <column name="id_u" not-null="true" />
            </key>
            <many-to-many entity-name="com.packt.cookbook.domain.Role">
                <column name="id_r" not-null="true" />
            </many-to-many>
        </set-->
        <set name="listOfRole" table="user_role"  inverse="true" lazy="false" fetch="select" cascade="all">
            <key>
                <column name="id_u" not-null="true" />
            </key>
            <many-to-many entity-name="com.packt.cookbook.domain.Role">
                <column name="id_r" not-null="true" />
            </many-to-many>
        </set>
    </class>
    
</hibernate-mapping>